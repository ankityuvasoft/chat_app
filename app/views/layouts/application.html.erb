<!DOCTYPE html>
<html>
  <head>
    <title>Chat</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <div class="container">
      <% if user_signed_in? %>
       <li> <%= link_to "Logout", destroy_user_session_path, :method => :delete %> | <%= link_to "Edit", edit_user_registration_path %></li>
       <li><%= current_user.user_name%></li>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

